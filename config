# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=blocks/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[kbdd_layout]
interval=persist

[batterybar]
label=bat: 
interval=5
markup=pango
min_width=bat: ■■■■■

[iface]
color=#b8bb26
interval=5

[wifi]
label=wifi: 
min_width=wifi: 100%
interval=5

[disk]
LABEL=√ 
DIR=/
interval=30

[disk]
LABEL=⌂ 
interval=30

[temperature]
label=temp: 
interval=10

[load_average]
label=load: 
interval=1

[cpu_usage]
label=cpu: 
interval=1
min_width=cpu: 100.0%

[memory]
label=mem: 
interval=1
min_width=mem: 0.0G/0.0G (100%)

[volume-pulseaudio]
interval=1
markup=pango

[time]
interval=1
STRFTIME_FORMAT=%F %T
TZONES=Europe/Berlin,Etc/UTC
TZ_LABELS=,UTC
